<%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/navbar.ejs') %>
    
    <div class="container">
        <h1>Perguntas</h1>
        <a href="/ask" class="btn btn-primary">Perguntar</a>
        <br>
        <hr>
        <% asks.map(ask => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><%= ask.title %></h3>
                </div>
                <div class="card-footer">
                    <a href="/question/<%= ask.id %>">
                        <button class="btn btn-primary">Responder</button>
                    </a>
                </div>
            </div>
        <% }) %>
    </div>

</body>
<%- include ('partials/footer.ejs') %>